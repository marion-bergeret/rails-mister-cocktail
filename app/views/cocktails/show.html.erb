<%= render '/layouts/navbar' %>

<h1><%= @cocktail.name %></h1>

<div>
    <ul>
      Ingredients: <%@cocktail.ingredients.each do |ing|  %>
        <li><%= ing.name  %></li>
      <% end %>
    </ul>

    <ul>
      Doses: <% @cocktail.doses.each do |dose|  %>
        <li><%= dose.ingredient.name %></li>
        <li><%= dose.description  %></li>
        <button type="button" class="btn btn-link"><%= link_to "Delete dose", cocktail_dose_path(@cocktail, dose), method: :delete %></button>

      <% end %>
    </ul>

</div>

<%= link_to "Add a dose", new_cocktail_dose_path(params[:id]) %>


